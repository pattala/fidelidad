{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/admin",
            "destination": "/admin-panel/index.html"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/admin-panel/$1"
        },
        {
            "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json|svg|woff2?))",
            "destination": "/client-pwa/$1"
        },
        {
            "source": "/((?!api/|admin|admin/).*)",
            "destination": "/client-pwa/index.html"
        }
    ]
}